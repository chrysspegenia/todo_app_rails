<h1>Todo List</h1>

<p style="color: green"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.completed ? "Yes" : "No" %></td>
        <td><%= link_to "Show", task %></td>
        <td><%= link_to "Edit", edit_task_path(task) %></td>
        <td><%= link_to "Destroy", task, method: :delete, data: {confirm: "Are you sure?" } %></td>
        <td><%= button_to "Mark as Completed", complete_task_path(task), method: :patch, params: { task: {completed: true }} %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New task", new_task_path %>
